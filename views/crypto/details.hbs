
    <main>
        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="{{currentCrypto.image}}">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{currentCrypto.name}}</h1>
                    <h3 id="payment">{{currentCryptopayment}}</h3>
                    <p id="price"><span>Price: ${{currentCrypto.price}}</span></p>
                    <p id="description">{{currentCrypto.description}}</p>
                </div>
                {{#if token}}
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    {{#if owner}}
                    <div class="author">
                        <a href="/crypto/{{currentCrypto._id}}/edit" class="btn-edit">Edit</a>
                        <a href="#" class="btn-delete">Delete</a>
                    </div> 
                    {{/if}}
                    
                    {{#if owner}}
                        {{else}}
                        <a href="/catalog/buy/{{currentCrypto._id}}" class="btn-buy">Buy</a> 
                    {{/if}}
                    <!-- Logged in user who has not yet buy this crypto-->
                     {{#if owner}}
                        {{else}}
                        <p class="buy-message">You already bought these crypto coins.</p>
                        
                    {{/if}}
                    
                    <!-- Logged in user who has already buy this crypto-->
                    
                </div>
                {{/if}}
            </div>
        </section>
    </main>

  